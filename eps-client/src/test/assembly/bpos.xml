<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>README.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/scripts</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>EPSClientRun.bat</include>
                <include>EPSClientRun.sh</include>
                <include>cpappend.bat</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/conf</directory>
            <outputDirectory>/conf</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>src/main/resources/sqlmapper</directory>
            <outputDirectory>/sqlmapper</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>src/test/scripts</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>BPOS.bat</include>
                <include>BPOS.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/test/resources</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>BPOS.data</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
